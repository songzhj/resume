---
const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width"/>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg"/>
  <meta name="generator" content={Astro.generator}/>
  <title>{title}</title>
</head>
<body>
  <div class="container">
    <slot/>
  </div>
</body>
</html>

<style>
    html,
    body {
        display: flex;
        justify-content: center;
        margin: 0;
        width: 100%;
        height: 100%;
    }

    .container {
        width: 600px;
    }
</style>
